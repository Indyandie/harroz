{
  "layer": "top",
  "position": "bottom",
  "height": 48,
  "spacing": 12,
  "modules-left": [
    "hyprland/submap",
    "cpu",
    "memory",
    "temperature"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "tray"
  ],
  "keyboard-state": {
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },
  "hyprland/submap": {
    "format": "<span fgalpha='25%' weight='bold' style='oblique'>{}</span>"
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10,
    "tooltip": true
  },
  "cpu": {
    "format": "{usage}% <span fgalpha='60%' color='#FFFFFF' rise='-4000' size='18pt'>󰍛</span>",
    "tooltip": false
  },
  "memory": {
    "format": "{}% <span fgalpha='60%' color='#FFFFFF' rise='-4000' size='18pt'>󰆼</span>"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C <span fgalpha='60%' color='#FFFFFF' rise='-4000' size='18pt'>{icon}</span>",
    "format-icons": [
      "󰈸"
    ]
  }
}
